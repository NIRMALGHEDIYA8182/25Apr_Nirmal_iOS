#include <stdio.h>

int main() {
    // Declare variables
    float side, circumference;

    // Input the length of one side from the user
    printf("Enter the length of one side of the square: ");
    scanf("%f", &side);

    // Calculate the circumference using the formula C = 4 * a
    circumference = 4 * side;

    // Display the result
    printf("The circumference of the square is: %.2f\n", circumference);

    return 0;
}
